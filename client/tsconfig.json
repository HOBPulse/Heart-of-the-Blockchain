{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "src/chai-shim.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "node_modules/@types/sinon",
    "**/node_modules/@types/sinon",
    "**/.pnpm/@types+sinon*/node_modules/@types/sinon"
  ]
} 